<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_titlebar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@mipmap/normalbutton_normal">
        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@mipmap/default_round_head"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:id="@+id/tv_titlebar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="今日头条"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/right_drawer_normal"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_titlebar">
        <LinearLayout
            android:id="@+id/rl_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <HorizontalScrollView
                android:id="@+id/hsv_scroll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:scrollbars="none"
                android:padding="5dp"
                android:layout_below="@id/ll_titlebar">
                <LinearLayout
                    android:id="@+id/ll_scroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>
            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/channel_glide_press"
                android:clickable="true"
                android:onClick="onClick"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/hsv_scroll"
                android:background="@color/colorPrimary"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/channel_leftblock"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/channel_rightblock"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/rl_ll"
            android:background="@color/colorPrimary"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rl">

    </android.support.v4.view.ViewPager>



</RelativeLayout>