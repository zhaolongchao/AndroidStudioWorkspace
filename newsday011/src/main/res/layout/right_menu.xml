<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_slidingmenu_left">
    <ImageView
        android:id="@+id/iv_login"
        android:onClick="onClick"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/biz_pc_main_info_profile_avatar_bg_dark"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"/>
    <Button
        android:id="@+id/btn_login"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立刻登录"
        android:textColor="#fff"
        android:textSize="40dp"
        android:background="#222"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新版本"
        android:textColor="#fff"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:background="@mipmap/share_little_bg">
        <ImageView
            android:id="@+id/iv_share_weixin"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/fun_share_weixin"/>
        <ImageView
            android:id="@+id/iv_share_qq"
            android:onClick="onClick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@mipmap/add_qq"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/iv_share_friends"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/fun_share_friends"/>
        <ImageView
            android:id="@+id/iv_share_weibo"
            android:onClick="onClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/fun_share_weibo"/>
    </LinearLayout>

</LinearLayout>