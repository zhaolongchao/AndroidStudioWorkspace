<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00f"
    android:padding="15dp">
    <ImageView
        android:id="@+id/iv_standard_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/maplayer_manager_2d_hl"/>
    <ImageView
        android:id="@+id/iv_satellite_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/maplayer_manager_sate"/>
    <ImageView
        android:id="@+id/iv_bus_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/maplayer_manager_gj"/>

</LinearLayout>